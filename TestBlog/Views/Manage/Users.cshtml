@model IQueryable<TestBlog.Models.ApplicationUser>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

@Html.ActionLink("Add New", "Register", "Account", null, new { @class = "btn btn-primary" })


<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Active</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.UserName</td>
                <td>@(account.LockoutEnabled ? "No" : "Yes")</td>
                <td>
                    <a href="@Url.Action("Delete", "User")">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                    
                    <a href="@Url.Action("Edit", "User")">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
    </table>
        